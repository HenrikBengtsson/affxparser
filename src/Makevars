CXX_STD = CXX14
## -Wno-unused-private-field gives notes/errors with some compiler
MYCXXFLAGS = -Wno-sign-compare -O0

%.o: %.cpp
	$(CXX) $(ALL_CPPFLAGS) $(ALL_CXXFLAGS) $(MYCXXFLAGS) -c $< -o $@

%.o: %.c
	$(CC) $(ALL_CPPFLAGS) $(ALL_CFLAGS) -c $< -o $@

