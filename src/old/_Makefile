COMPILER=g++
CCFLAGS=
LIBS=  

PARSE_FILES=FileIO.cpp CELFileData.cpp CDFFileData.cpp CHPFileData.cpp BARFileData.cpp BPMAPFileData.cpp
R_FILES=R_affx_parser.cpp
MAIN_FILES=ReadAffxFiles.cpp

# g++ -I/usr/lib/R/include     -fPIC  -g -O2 -c CDFFileData.cpp -o CDFFileData.o
# g++ -shared  -o FileIO.so FileIO.o CDFFileData.o   -L/usr/lib/R/lib -lR

libs: 
	${COMPILER}  -shared -o affx_parser ${CCFLAGS} ${PARSE_FILES}

cmd_line: 
	${COMPILER} ${CCFLAGS} ${MAIN_FILES} -lm -o affx_cmd ${PARSE_FILES}

r_package: libs
	${COMPILER} ${CCFLAGS} ${}


clean:
	rm -f *~ *.o *.so sa
